<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".XemDTBQT">
    <EditText
        android:layout_marginTop="5dp"
        android:id="@+id/XemBQT_edtTimTu"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp"
        android:hint="Tìm kiếm từ ..."></EditText>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textAllCaps="true"
            android:textStyle="bold"
            android:id="@+id/dongBQT_nguyenthe"
            android:layout_marginLeft="5dp"
            android:textColor="#FF0000"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Nguyên thể"
            ></TextView>
        <TextView

            android:textAllCaps="true"
            android:textStyle="bold"
            android:id="@+id/dongBQT_quakhu"
            android:layout_marginLeft="5dp"
            android:textColor="#FF0000"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Quá khứ"
            ></TextView>
        <TextView

            android:textAllCaps="true"
            android:textStyle="bold"
            android:id="@+id/dongBQT_qkpt"
            android:layout_marginLeft="5dp"
            android:textColor="#FF0000"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Quá khứ PT"
            ></TextView>
        <TextView

            android:textAllCaps="true"
            android:textStyle="bold"
            android:id="@+id/dongBQT_nghia"
            android:layout_marginLeft="5dp"
            android:textColor="#FF0000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nghĩa"
            ></TextView>
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/XemBQT_lv"></ListView>
</LinearLayout>