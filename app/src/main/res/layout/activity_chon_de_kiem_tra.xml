<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChonDeKiemTra">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/ChonDe_btnHome"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_main"></Button>
        <TextView
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHỌN ĐỀ THI"
            android:textSize="40sp"
            android:layout_gravity="center"
            android:layout_marginTop="15sp"
            android:textColor="#673AB7"></TextView>
    </LinearLayout>

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <TextView
               android:textStyle="bold"
               android:textAllCaps="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Tiếng anh sơ cấp"
               android:textSize="20sp"
               android:textColor="#D30F0F"
               android:layout_marginTop="20dp"
               android:layout_marginLeft="5dp"></TextView>

           <ListView
               android:id="@+id/ChonDe_TASC"
               android:layout_width="match_parent"
               android:layout_height="190dp"></ListView>
           <TextView

               android:textStyle="bold"
               android:textAllCaps="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Tiếng anh trung cấp"
               android:textSize="20sp"
               android:textColor="#D30F0F"
               android:layout_marginTop="20dp"
               android:layout_marginLeft="5dp"></TextView>
           <ListView
               android:layout_width="match_parent"
               android:layout_height="190dp"
               android:id="@+id/ChonDe_TATC"></ListView>
           <TextView
               android:textStyle="bold"
               android:textAllCaps="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Tiếng anh cao cấp"
               android:textSize="20sp"
               android:textColor="#D30F0F"
               android:layout_marginTop="20dp"
               android:layout_marginLeft="5dp"></TextView>
           <ListView
               android:layout_width="match_parent"
               android:layout_height="190dp"
               android:id="@+id/ChonDe_TACC"></ListView>
       </LinearLayout>
   </ScrollView>


</LinearLayout>