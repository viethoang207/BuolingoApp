<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Layout_TinTuc">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#6c6175"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="15dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/parrot_img"
            android:layout_gravity="center"></ImageView>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GOOD MORNING !"
                android:textColor="#F7FF0D"
                android:textSize="25sp"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hoàng Việt"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:id="@+id/TinTuc_tvTenTK"></TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="190dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textColor="#F30E0E"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LET'S STUDY !"
            android:textSize="25sp"
            android:id="@+id/TinTuc_tvStudy"></TextView>
        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_enter"></ImageView>
    </LinearLayout>

    <TextView
        android:textColor="#2343F8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rèn luyện kĩ năng nghe"
        android:textSize="17dp"
        android:layout_marginTop="45sp"

        ></TextView>

    <LinearLayout

        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/lytNghe1"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/listen1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                ></ImageView>
            <TextView
                android:layout_marginLeft="5dp"
                android:paddingTop="12dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="5 tuyệt chiêu độc lạ để nghe tiếng Anh thần thánh...."></TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lytNghe2"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/listen2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                ></ImageView>
            <TextView
                android:layout_marginLeft="5dp"
                android:paddingTop="12dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Luyện nghe tiếng Anh hiệu quả: Có nên xem phụ đề hay không ?"></TextView>
        </LinearLayout>
    </LinearLayout>

    <TextView

        android:textColor="#FFC107"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rèn luyện kĩ năng nói"
        android:textSize="17dp"
        android:layout_marginTop="30dp"

        ></TextView>

    <LinearLayout
        android:id="@+id/lytNoi1"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout

            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/talk1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                ></ImageView>
            <TextView
                android:layout_marginLeft="5dp"
                android:paddingTop="12dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="10 MẸO ĐỂ TĂNG CƯỜNG KỸ NĂNG NÓI TIẾNG ANH"></TextView>
        </LinearLayout>
        <LinearLayout

            android:id="@+id/lytNoi2"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/talk2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                ></ImageView>
            <TextView
                android:layout_marginLeft="5dp"
                android:paddingTop="12dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Cách rèn luyện kỹ năng nói tiếng Anh mỗi ngày"></TextView>
        </LinearLayout>


    </LinearLayout>

    //nhớ từ vựng
    <TextView

        android:textColor="#F11505"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kĩ năng nhớ từ vựng"
        android:textSize="17dp"
        android:layout_marginTop="30dp"

        ></TextView>

    <LinearLayout
        android:id="@+id/lytTV1"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout

            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/vocab1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                ></ImageView>
            <TextView
                android:layout_marginLeft="5dp"
                android:paddingTop="12dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Top 5 cách học từ vựng tiếng Anh hiệu quả không bao giờ quên"></TextView>
        </LinearLayout>
        <LinearLayout

            android:id="@+id/lytTV2"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/vocab2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                ></ImageView>
            <TextView
                android:layout_marginLeft="5dp"
                android:paddingTop="12dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Cách học từ vựng tiếng Anh thông minh (mà có thể bạn chưa biết)"></TextView>
        </LinearLayout>


    </LinearLayout>


    <Button
        android:id="@+id/TinTuc_btnDangXuat"
        android:layout_gravity="center"
        android:background="@drawable/botron_tieptuc"
        android:layout_marginTop="45dp"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:text="Đăng xuất"></Button>

</LinearLayout>