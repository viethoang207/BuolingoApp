<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/botron_maucau"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S + too + Adj/Adv + to V"
        android:id="@+id/dongMC_tvMauCau"
        android:textSize="25dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textColor="#432081"
        ></TextView>
    <Space
        android:layout_width="5dp"
        android:layout_height="5dp"></Space>
    <TextView
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quá ... để làm điều gì"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:id="@+id/dongMC_tvNghia"></TextView>
    <Space
        android:layout_width="5dp"
        android:layout_height="5dp"></Space>
    <TextView
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ví dụ : It is too hot for me to eat"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:id="@+id/dongMC_tvViDu"></TextView>
    <Space
        android:layout_width="12dp"
        android:layout_height="12dp"></Space>
</LinearLayout>